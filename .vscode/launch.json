  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start services dev",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "start:debug"],
      "stopOnEntry": true,
      "sourceMaps": true,
      "autoAttachChildProcesses": true,
      "showAsyncStacks": true,
      "smartStep": true
    },
    {
      "name": "Integration tests debug",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "test:e2e:watch"],
      "stopOnEntry": true,
      "sourceMaps": true,
      "autoAttachChildProcesses": true,
      "showAsyncStacks": true,
      "smartStep": true
    }
  ]
}
